<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Admin | Happy Lungs</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <script src="https://kit.fontawesome.com/5e4b159602.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <%- include("./nav.ejs") %>
        <main>
            <div id="messagesTitle">
                <% if (locals.error) { %>
                    <h3><%= error %></h3>
                <% } %>
                <div class="userImageMessages">
                    <img src="https://d1bvpoagx8hqbg.cloudfront.net/originals/how-to-take-a-good-photo-for-your-cv-our-top-tips-e529cea3222e81502875a139a070a9fe.jpg">
                </div>
                <div>
                    <h3><b>JÃºlia Herrera</b> | Reported chat messages</h3>
                </div>
            </div>
            <div id="messagesList">
                <div class="legend">
                    <div><i class=" legendRed fa-solid fa-check"></i></div>
                    Accept repot
                    <div><i class="legendGreen fa-solid fa-x"></i></div>
                    Decline report
                </div>
                <% if( locals.messages ) {
                    let date = "";
                    messages.forEach(message => {
                %>
                <% if (message.date != date) {
                    date = message.date;
                %>
                <div class="messageDay">
                    <%= message.date %>
                </div>
                <% } %>
                <% if (message.state === -1) { %>
                <div class="message messageAccepted">
                    <div class="messageTime">
                        <div>
                            <%= message.hour %>
                        </div>
                    </div>
                    <div class="messageText">
                        <div>
                            <span class="reportedBy">Reported by <%= message.reportantUsername %></span>
                            <br>
                            <%= message.text %>
                        </div>
                    </div>
                </div>
                <% } else if (message.state === -2) { %>
                <div class="message messageDeclined">
                    <div class="messageTime">
                        <div>
                            <%= message.hour %>
                        </div>
                    </div>
                    <div class="messageText">
                        <div>
                            <span class="reportedBy">Reported by <%= message.reportantUsername %></span>
                            <br>
                            <%= message.text %>
                        </div>
                    </div>
                </div>
                <% } else { %>
                <div class="message">
                    <form method="post" action="/acceptReportedMessage?id=<%= message.id %>">
                        <button type="submit" class="confirmButon">
                            <div class="confirmButon">
                                <div>
                                    <i class="fa-solid fa-check"></i>
                                </div>
                            </div>
                        </button>
                    </form>
                    <form method="post" action="/declineReportedMessage?id=<%= message.id %>">
                        <button type="submit" class="declineButton">
                            <div class="declineButton">
                                <div>
                                    <i class="fa-solid fa-x"></i>
                                </div>
                            </div>
                        </button>
                    </form>
                    <div class="messageTime">
                        <div>
                            <%= message.hour %>
                        </div>
                    </div>
                    <div class="messageText">
                        <div>
                            <span class="reportedBy">Reported by <%= message.reportantUsername %></span>
                            <br>
                            <%= message.text %>
                        </div>
                    </div>
                </div>
                <% } }) } %>
            </div>
        </main>
    </body>
</html>